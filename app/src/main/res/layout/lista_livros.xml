<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" android:id="@+id/viewLista">
    <TextView
            android:text="TextView"
            android:layout_width="117dp"
            android:layout_height="19dp"
            android:id="@+id/txtTitulo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="117dp"
            android:layout_height="19dp"
            android:id="@+id/txtAutor" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="117dp"
            android:layout_height="22dp"
            android:id="@+id/txtEditora" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="117dp"
            android:layout_height="20dp"
            android:id="@+id/txtAnoPublicacao" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>